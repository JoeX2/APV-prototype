<%= form_for @data_letter, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :titel, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titel, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :text, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :material_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :material_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                data_letter_path, :class => 'btn' %>
  </div>
<% end %>
